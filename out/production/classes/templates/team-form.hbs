{{#partial "content"}}
    {{# if editTeam }}
        <h1> Edit this Team</h1>
        <form action="/teams/{{editTeam.id}}/update" method="post">
            <label for="teamName">Edit this teams name</label>
            <input id="teamName" name="teamName" type="text" value="{{editTeam.teamName}}">
            <button type="submit" class="btn btn-default">edit team</button>
        </form>
    {{else}}
    <p>Add a new Team:</p>

    <form action="/teams/new" method="post">
        <label for="teamName">What is your team name?</label><br>
        <input id="teamName" name="teamName" type="text">
        <br>
        <label for="description">Describe your team.</label><br>
        <input id="description" name="description" type="text"><br>
        <label for="name">what is your name.</label><br>
        <input id="name" name="name" type= "text" >

        <button type="submit" class="btn btn-default">Add team</button>
    </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}